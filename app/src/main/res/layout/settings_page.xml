<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingTitle_vietnamese"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wrench_screwdriver"
        android:layout_marginTop="68dp"/>

    <ImageView
        android:id="@+id/bellIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/bell"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:text="@string/notify_vietnamese"
        android:layout_marginStart="74dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Switch
        android:id="@+id/checkboxAttendanceSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="30dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/clock"
        android:layout_marginTop="330dp"
        android:layout_marginStart="42dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receive_notify_vietnamese"
        android:layout_marginStart="70dp"
        android:layout_marginTop="330dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/checkboxAttendanceSelector"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>
    
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/language"
        android:layout_marginTop="380dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="382dp"
        android:layout_marginStart="72dp"
        android:textSize="20sp"
        android:text="@string/languageSelector_vietnamese"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/checkboxAttendanceSelector"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="78dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/language_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>
    
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logout"
        android:layout_marginBottom="176dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_vietnamese"
        android:layout_marginBottom="184dp"
        android:layout_marginStart="78dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>